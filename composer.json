{
    "name": "digital-marketing-framework/typo3-local-crm",
    "description": "Digital Marketing Framework - Local CRM",
    "license": "GPL-2.0-or-later",
    "type": "typo3-cms-extension",
    "keywords": [
        "TYPO3",
        "marketing",
        "framework",
        "data",
        "relay",
        "distributor",
        "collector",
        "local crm"
    ],
    "authors": [
        {
            "name": "Mediatis AG",
            "email": "info@mediatis.de",
            "homepage": "https://www.mediatis.de",
            "role": "Developer"
        }
    ],
    "homepage": "https://www.mediatis.de",
    "require": {
        "php": "^8.1",
        "digital-marketing-framework/local-crm": "dev-main",
        "digital-marketing-framework/typo3-collector-core": "^1.0",
        "digital-marketing-framework/typo3-distributor-core": "^1.0",
        "typo3/cms-core": "^11.5 || ^12.4"
    },
    "require-dev": {
        "mediatis/typo3-coding-standards": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "DigitalMarketingFramework\\Typo3\\LocalCrm\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DigitalMarketingFramework\\Typo3\\LocalCrm\\Tests\\": "Tests"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true,
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        },
        "bin-dir": ".Build/bin",
        "vendor-dir": ".Build/vendor"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "dmf_local_crm",
            "web-dir": ".Build/Web"
        }
    }
}
